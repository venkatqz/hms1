<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hms1">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HMS1">

        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.auth.AdminSignupActivity"
            android:exported="false" />

        <activity
            android:name=".ui.auth.StudentSignupActivity"
            android:exported="false" />

        <activity
            android:name=".ui.auth.WorkerSignupActivity"
            android:exported="false" />

        <activity
            android:name=".ui.auth.UserRegistrationActivity"
            android:exported="false" />

        <activity
            android:name=".ui.auth.SetupSecretKeyActivity"
            android:exported="false" />

        <activity
            android:name=".ui.student.StudentDashboardActivity"
            android:exported="false" />

        <activity
            android:name=".ui.admin.AdminDashboardActivity"
            android:exported="false" />

        <activity
            android:name=".ui.worker.WorkerDashboardActivity"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>
</manifest> 